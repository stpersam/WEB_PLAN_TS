DROP TABLE pictures;

CREATE TABLE pictures(
    ID integer AUTO_INCREMENT,
    Name varchar (255) unique ,
    latitude varchar (255),
    longitude varchar (255),
    capturedate date,
    changedate date ,
    state varchar (255),
    href varchar (255) unique,
    tags varchar(255),
    owner varchar(255),
    PRIMARY KEY(ID,Name)
);

Insert INTO pictures (Name,latitude,longitude,capturedate,changedate,state,href,tags,owner) values ('Test','nn','ee','2015-12-17','2015-12-17','freigegeben','test.png','test,klaus','Samuel');

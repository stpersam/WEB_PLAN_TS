DROP TABLE users;

CREATE TABLE users(
    ID integer AUTO_INCREMENT,
    Anrede varchar (255),
    Vorname varchar (255),
    Nachname varchar (255),
    Adresse varchar (255),
    PLZ integer ,
    Ort varchar (255),
    Username varchar (255) unique,
    Password varchar (255),
    Email varchar (255),
    Rolle varchar (10),
    PRIMARY Key(ID,Username)
);

Insert INTO users (Anrede,Vorname,Nachname,Adresse,PLZ,Ort,Username,Password,Email,Rolle) values ('Mr','Admin','Admin','xx',1234,'yy','admin',SHA2('admin',256),'admin@admin.com','admin');
